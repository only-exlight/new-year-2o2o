{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitUseStrict": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
            "@app/*": [
                "src/app/*"
            ],
            "@screens/*": [
                "src/app/screens/*"
            ],
            "@components/*": [
                "src/app/components/*"
            ],
            "@interfaces/*": [
                "src/app/interfaces/*"
            ],
            "@consts": [
                "src/app/consts/*"
            ],
            "@models": [
                "src/app/models/*"
            ],
            "@env/*": [
                "src/environments/*"
            ]
        },
        "lib": [
            "es6",
            "dom",
            "es2015.reflect"
        ],
        "types": [
            "react",
            "react-dom",
            "reflect-metadata",
            "node"
        ],
        "moduleResolution": "node"
    },
    "include": [
        "./src/**/*"
    ]
}